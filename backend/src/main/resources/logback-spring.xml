<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!-- ============================================ -->
    <!-- Property Definitions -->
    <!-- ============================================ -->
    <property name="LOG_PATH" value="logs"/>
    <property name="APP_NAME" value="SimpleSpringBootCRUD"/>
    
    <!-- Console Pattern with MDC context -->
    <property name="CONSOLE_PATTERN" 
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [%X{requestId}] [%X{userId}] %-5level %logger{36} - %msg%n"/>
    
    <!-- File Pattern with full context -->
    <property name="FILE_PATTERN" 
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [%X{requestId}] [%X{userId}] [%X{sessionId}] %-5level %logger{50} - %msg%n"/>
    
    <!-- ============================================ -->
    <!-- Console Appender (Development) -->
    <!-- ============================================ -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <!-- Only log INFO and above to console to reduce clutter -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>
    
    <!-- ============================================ -->
    <!-- Application File Appender -->
    <!-- ============================================ -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/application.log</file>
        <encoder>
            <pattern>${FILE_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        
        <!-- Rolling Policy: Daily + Size-based -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- Daily rollover -->
            <fileNamePattern>${LOG_PATH}/application.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            
            <!-- Each file max 10MB -->
            <maxFileSize>10MB</maxFileSize>
            
            <!-- Keep 30 days of history -->
            <maxHistory>30</maxHistory>
            
            <!-- Total size cap: 3GB -->
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- ============================================ -->
    <!-- Error File Appender (ERROR and above only) -->
    <!-- ============================================ -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/errors.log</file>
        <encoder>
            <pattern>${FILE_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        
        <!-- Only ERROR and above -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/errors.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>90</maxHistory> <!-- Keep errors longer -->
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- ============================================ -->
    <!-- Audit File Appender (Security & Audit Trail) -->
    <!-- ============================================ -->
    <appender name="AUDIT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/audit.log</file>
        <encoder>
            <pattern>${FILE_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        
        <!-- Filter: Only messages containing AUDIT: or SECURITY: -->
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator class="ch.qos.logback.classic.boolex.OnMarkerEvaluator">
                <marker>AUDIT</marker>
            </evaluator>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>NEUTRAL</onMismatch>
        </filter>
        
        <!-- Also accept messages with AUDIT: or SECURITY: prefix -->
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator>
                <expression>return message.contains("AUDIT:") || message.contains("SECURITY:");</expression>
            </evaluator>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/audit.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>365</maxHistory> <!-- Keep audit logs for 1 year -->
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- ============================================ -->
    <!-- Async Wrappers (Better Performance) -->
    <!-- ============================================ -->
    
    <!-- Async wrapper for FILE appender -->
    <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="FILE"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
        <neverBlock>false</neverBlock>
    </appender>
    
    <!-- Async wrapper for ERROR_FILE appender -->
    <appender name="ASYNC_ERROR_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="ERROR_FILE"/>
        <queueSize>256</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>true</includeCallerData> <!-- Include for errors -->
        <neverBlock>false</neverBlock>
    </appender>
    
    <!-- Async wrapper for AUDIT_FILE appender (NEVER drop audit logs) -->
    <appender name="ASYNC_AUDIT_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="AUDIT_FILE"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold> <!-- Never discard -->
        <includeCallerData>true</includeCallerData>
        <neverBlock>false</neverBlock>
    </appender>
    
    <!-- ============================================ -->
    <!-- Logger Configurations -->
    <!-- ============================================ -->
    
    <!-- Application Loggers -->
    <logger name="com.simple.crud.demo" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_FILE"/>
        <appender-ref ref="ASYNC_ERROR_FILE"/>
        <appender-ref ref="ASYNC_AUDIT_FILE"/>
    </logger>
    
    <!-- Service Layer (includes audit trail) -->
    <logger name="com.simple.crud.demo.service" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_FILE"/>
        <appender-ref ref="ASYNC_ERROR_FILE"/>
        <appender-ref ref="ASYNC_AUDIT_FILE"/>
    </logger>
    
    <!-- Security & Config -->
    <logger name="com.simple.crud.demo.security" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_FILE"/>
        <appender-ref ref="ASYNC_AUDIT_FILE"/>
    </logger>
    
    <logger name="com.simple.crud.demo.config" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_FILE"/>
        <appender-ref ref="ASYNC_ERROR_FILE"/>
    </logger>
    
    <!-- Controller Layer - DEBUG in dev, INFO in prod -->
    <springProfile name="dev">
        <logger name="com.simple.crud.demo.controller" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_FILE"/>
        </logger>
    </springProfile>
    
    <springProfile name="prod">
        <logger name="com.simple.crud.demo.controller" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_FILE"/>
        </logger>
    </springProfile>
    
    <!-- Hibernate/JPA SQL Logging -->
    <springProfile name="dev">
        <logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>
        <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>
    </springProfile>
    
    <springProfile name="prod">
        <logger name="org.hibernate.SQL" level="WARN" additivity="false">
            <appender-ref ref="ASYNC_FILE"/>
        </logger>
    </springProfile>
    
    <!-- Spring Framework -->
    <logger name="org.springframework.web" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_FILE"/>
    </logger>
    
    <logger name="org.springframework.security" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_FILE"/>
        <appender-ref ref="ASYNC_AUDIT_FILE"/>
    </logger>
    
    <!-- ============================================ -->
    <!-- Root Logger -->
    <!-- ============================================ -->
    
    <!-- Development Profile: More verbose -->
    <springProfile name="dev">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_FILE"/>
            <appender-ref ref="ASYNC_ERROR_FILE"/>
        </root>
    </springProfile>
    
    <!-- Production Profile: Less verbose, more efficient -->
    <springProfile name="prod">
        <root level="WARN">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_FILE"/>
            <appender-ref ref="ASYNC_ERROR_FILE"/>
        </root>
    </springProfile>
    
    <!-- Default (if no profile specified): Use INFO -->
    <springProfile name="default">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_FILE"/>
            <appender-ref ref="ASYNC_ERROR_FILE"/>
        </root>
    </springProfile>
    
</configuration>
